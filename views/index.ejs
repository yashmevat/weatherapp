<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Weather App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
    <!-- As a link -->
<nav class="navbar bg-color">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Navbar</a>
    </div>
  </nav>


    <div class="container w-50 mt-3">
        <div class="row">
            <div class="col-md-12">
                <h1>Check Weather Of Your City</h1>
                <form action="/show" method="get" onsubmit="submit()">
                    <div class="mb-3">
                      <label for="city" class="form-label">Enter Your city</label>
                      <input type="text" class="form-control" id="city" name="city">
                    </div>
    
                    <button type="submit" class="btn btn-dark">Check</button>
                  </form>
            </div>
        </div>
    </div>

    <div class="container mt-3 w-50 d-flex justify-content-center align-items-center" id="info">
        <div class="row">
            <div class="col-md-12">
                <% if (error) { %>
                  <p class="error"><%= error %></p>
                <% } else if (weather) {%>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                          <h2><%= city.toUpperCase() %></h2>
                          <h5 class="card-title"><%= weather.weather[0].main %> ,<%= weather.weather[0].description %></h5>
                          <p class="card-text">Temperature of the city is :<%=weather.main.temp %>&deg;C, Humidity is <%=weather.main.humidity  %></p>
                          <a href="/" class="btn btn-dark">Back</a>
                        </div>
                      </div>
                <% } %>
                
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>  
</body>
</html>